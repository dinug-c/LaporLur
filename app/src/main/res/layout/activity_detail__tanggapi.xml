<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Detail_Tanggapi">

    <LinearLayout
        android:id="@+id/asd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#7CAE84" />
        <ImageView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/layoutinput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/asd"
        android:layout_alignTop="@+id/asd"
        android:layout_alignEnd="@+id/asd"
        android:layout_alignBottom="@+id/asd"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="190dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10sp"
        android:layout_marginBottom="20dp"
        android:background="#FFF"
        android:padding="20sp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/profontbold"
                android:text="Detail Laporan"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/isi_tanggapi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/profontreg"
                android:text=" ' Loremp ipsum dolor ist amet loremp ipsum dolor sit amet loremp ipsum dolor ist amet loremp ipsum dolor sit amet ' "
                android:textAlignment="center"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/profontbold"
                android:text="Tanggapi"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/isitanggapan_sudah"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/isi_tanggapan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:onClick="tanggpkrm"
                android:id="@+id/btn_kirim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10sp"
                android:backgroundTint="#7BAD84"
                android:clickable="true"
                android:elevation="5sp"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="Kirim"
                android:textColor="#ffffff"
                android:textSize="15sp" />

            <Button
                android:onClick="editbtn"
                android:id="@+id/editbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10sp"
                android:backgroundTint="#7BAD84"
                android:clickable="true"
                android:elevation="5sp"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="Edit"
                android:textColor="#ffffff"
                android:textSize="15sp" />

            <Button
                android:onClick="deletebtn"
                android:id="@+id/delbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10sp"
                android:backgroundTint="#E57373"
                android:clickable="true"
                android:elevation="5sp"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="Hapus"
                android:textColor="#ffffff"
                android:textSize="15sp" />


        </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/asd"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="29dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/namauser_tanggapi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/profontreg"
            android:text="Radin"
            android:textColor="#ffffff"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/judul_tanggapi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PPDB Zonasi Bikin Siswa Frustasi"
            android:textColor="#ffffff"
            android:textSize="30dp"
            app:fontFamily="@font/profontbold" />

        <TextView
            android:id="@+id/waktu_tanggapi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/profontreg"
            android:text="Senin, 1 Juli 2019"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/lok_tanggapi"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/profontbold"
            android:text="RT/RW 09/07 - Dk. Jatwage"
            android:textColor="#ffffff" />

    </LinearLayout>

</RelativeLayout>