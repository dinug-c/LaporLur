<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity"
    android:background="@drawable/bg"
    android:id="@+id/splashly">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:src="@drawable/logo" />

    <android.support.v7.widget.CardView
        android:id="@+id/Mboten"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text="Pemerintah Transparan Warga Nyaman \n Menuju Gembong Dadi yang lebih baik "
            android:textSize="15dp"
            android:fontFamily="@font/helmed"/>
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/masuk"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/masuk"
        android:onClick="masukbtn"
        android:elevation="5dp"
        android:background="@drawable/bgbutton"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="80dp"
        android:fontFamily="@font/profontbold"
        android:textSize="25dp"/>

    <Button
        android:id="@+id/admin"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="Admin"
        android:onClick="adminbtn"
        android:elevation="5dp"
        android:background="@drawable/bgbutton"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/profontbold"
        android:textSize="20dp"/>

</android.support.design.widget.CoordinatorLayout>