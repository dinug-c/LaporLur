<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BeritaActivity"
    android:orientation="vertical"
    android:background="#eee">

    <LinearLayout
        android:id="@+id/asd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#26C6DA" />
        <ImageView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
    </LinearLayout>


    <TextView
        android:id="@+id/brttxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/asd"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="214dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/profontreg"
        android:text="Berita"
        android:textColor="#fff"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="173dp"
        android:layout_height="51dp"
        android:layout_below="@+id/brttxt"
        android:layout_alignStart="@+id/asd"
        android:layout_alignEnd="@+id/asd"
        android:layout_marginStart="15dp"
        android:layout_marginTop="-15dp"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/profontbold"
        android:text="Ada apa hari ini?"
        android:textColor="#fff"
        android:textSize="20dp" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_berita"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/asd"
        android:layout_alignEnd="@+id/asd"
        android:layout_marginHorizontal="15dp" />

</RelativeLayout>